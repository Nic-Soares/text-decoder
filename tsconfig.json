{
  "compilerOptions": {
    "target": "esnext",                    /* Compila para a versão mais recente do ECMAScript */
    "module": "ESNext",                    /* Usa a última versão de módulos ECMAScript */
    "lib": ["DOM", "ESNext"],              /* Inclui as bibliotecas do DOM e as mais recentes do ES 
    "strict": true,                        /* Habilita as verificações estritas de tipo */
    "esModuleInterop": true,               /* Facilita a interoperabilidade entre CommonJS e ES Modules */
    "skipLibCheck": true,                  /* Ignora a checagem de tipos das bibliotecas */
    "forceConsistentCasingInFileNames": true,  /* Garante consistência nos nomes de arquivos */
    "noEmitOnError": true,                 /* Não gera arquivos se houver erros */
    "sourceMap": true,                     /* Gera arquivos de mapa de origem para facilitar a depuração */
    "outDir": "./dist",                    /* Pasta de saída para os arquivos compilados */
    "removeComments": true                 /* Remove os comentários do código compilado */
  },
  "include": [
    "src/**/*"                             /* Inclui todos os arquivos dentro da pasta 'src' */
  ],
  "exclude": [
    "node_modules"                         /* Exclui a pasta 'node_modules' */
  ]
}
